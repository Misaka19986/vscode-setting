{
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "explorer.confirmDelete": false,
    "launch": {
        "configurations": []
    },
    /* editor */
    "editor.suggestSelection": "first",
    "editor.unicodeHighlight.includeComments": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "JetBrains Mono, 'Noto Serif CJK SC', 'GenSenRounded TW', monospace",
    "security.workspace.trust.untrustedFiles": "open",
    /* files */
    "files.autoGuessEncoding": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.autoSave": "afterDelay",
    /* debug */
    "debug.showBreakpointsInOverviewRuler": true,
    /* remote */
    "remote.SSH.remotePlatform": {
        "8.130.165.205": "linux",
        "1.95.38.151": "linux",
        "huaweiyun": "linux",
        "121.48.170.1": "linux",
        "Parallel": "linux",
        "server": "linux",
        "Parallel_Server": "linux",
        "Parallel_Server(VPN)": "linux",
        "Aliyun": "linux"
    },
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    /* python */
    "python.defaultInterpreterPath": "S:\\Python3.12\\python.exe",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
    },
    /* c/cpp */
    "[cuda-cpp]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
    },
    "C_Cpp.autocompleteAddParentheses": true,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Chromium, IndentWidth: 4}",
    "C_Cpp.intelliSenseEngine": "disabled",
    "diffEditor.renderSideBySide": true,
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    /* clangd */
    "clangd.path": "c:\\Users\\jack li\\AppData\\Roaming\\Code\\User\\globalStorage\\llvm-vs-code-extensions.vscode-clangd\\install\\18.1.3\\clangd_18.1.3\\bin\\clangd.exe",
    "clangd.arguments": [
        // 在后台自动分析文件（基于complie_commands)
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}/build",
        "-j=8",
        // 支持 .clangd 配置
        "--enable-config",
        "--clang-tidy",
        "--clang-tidy-checks=performance-*,bugprone-*",
        "--log=verbose",
        "--pretty",
        // 全局补全（会自动补充头文件）
        "--all-scopes-completion",
        // 更详细的补全内容
        "--completion-style=detailed",
        // 补充头文件的形式
        "--header-insertion=iwyu",
        // pch优化的位置
        "--pch-storage=memory",
        "--function-arg-placeholders",
    ],
    /* json */
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    /* workbench */
    "workbench.startupEditor": "none",
    "workbench.editor.empty.hint": "hidden",
    "workbench.editorAssociations": {
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },
    "workbench.colorTheme": "Default Dark+",
}